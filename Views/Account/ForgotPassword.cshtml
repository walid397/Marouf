@model Marofh.Models.ForgotPasswordViewModel
@using  Resources

@{
     var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
    if(culture.Contains("en-us"))
    {
       
          ViewBag.Title = "Restore Password ";
    }
    else
    {
          ViewBag.Title = "استرجاع كلمة المرور";
     
    }



  
    ViewBag.Parent = "الاعدات";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";

}



@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <style>

        .Termcod {
            background: #ffffff;
            padding: 22px 20px;
            box-shadow: -1px 6px 16px rgb(0 0 0 / 10%);
            border-radius: 10px;
            margin-top: 28px;
            padding-top: 0px;
        }
    </style>


    <section>

        <div class="wrapper">


            <div class="">


                <div class="container ">


                    <div class="Termcod wow animated fadeIn" data-wow-delay="0.8s">

                        <div class="termtem">

                            <h4 class="pt-30 pb-20"></h4>
                            <div class="row">
                                @Html.AntiForgeryToken()
                                <h4>@Resource.EnterYourEmail   </h4>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="form-group col-6 col-lg-6">
                                    <div>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form__input", placeholder = Resource.Email, required = "required" })
                                        @Html.ValidationMessageFor(model => model.Email, Resource.RequiredField , new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-2">
                                        <input type="submit" class="btn btn-default" value=" @Resource.Restore" />
                                    </div>
                                </div>

                            </div>

                        </div>




                    </div>


                    <div class="row mt-5">
                        <div class="borbo col-md-12 m-2">
                            <a href="#" onclick="history.back()" class="backbuton">@Resource.Back </a>
                        </div>

                    </div>

                </div>





            </div>

        </div>

    </section>
}