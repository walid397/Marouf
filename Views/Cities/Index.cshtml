@model IEnumerable<Marofh.City>

@{
    ViewBag.Title = "متابعة المدن ";
    ViewBag.Parent = "المدن";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div class="row">

        <div class="col-1">الدولة </div>
        <div class="col-3">
            @{

                @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })

            }
        </div>
        <div class="col-1">

            <input type="submit" value="بحث" class="btn btn-default" />
        </div>
        <div class="col-2">
            @Html.ActionLink("إضافة مدينة جديدة", "Create", new { @class = "btn btn-default" })
        </div>
    </div>
    <table class="table display responsive nowrap">
        <thead>
            <tr>
                <th>
                    الاسم باللغة العربية
                </th>
                <th>
                    الاسم باللغة الانجليزية
                </th>

                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameEN)
                </td>

                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
                }