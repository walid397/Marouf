            <div class="tab-content" id="myOffersTabContent">
                <div class="tab-pane fade show active animate__animated animate__fadeIn" id="published" role="tabpanel" aria-labelledby="published-tab">


                    <div class="col-12">
                        <h2 class="form__title mt-4 mb-0 stylrep">
                            <span>    @Resource.NewPendingRequests</span>
                        </h2>

                    </div>
                    <table id="files_list" class="table table table-striped dt-responsive datatable" style="width:100%">
                        <thead class="thead">
                            <tr>
                                <th scope="col">  @Resource.OfficeName </th>
                                <th scope="col">  @Resource.OfficeAddress</th>
                                <th scope="col"> @Resource.WorkerName</th>
                                <th scope="col"> @Resource.WorkerJob  </th>
                                <th scope="col">@Resource.RequestDate  </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var request in Model.WorkerRequests.Where(p => p.RequestStatus == clsEnum.WorkerRequestStatus.تم_ارسال_الطلب.ToString()))
                            {
                            <tr>
                                <td class="img-td">
                                    @request.AspNetUser1.AspNetUser1.OfficeName
                                </td>
                                <td>
                                    @request.AspNetUser1.AspNetUser1.OfficeAddress
                                </td>
                                <td>
                                    @request.AspNetUser1.FName @Html.Raw(" ") @request.AspNetUser1.LName
                                </td>
                                @if (request.AspNetUser1.Job != null)
                                {
                                    if (culture.Contains("en-us"))
                                    {
                                        <td>
                                            @request.AspNetUser1.Job.NameEN
                                        </td>

                                    }
                                    else
                                    {
                                        <td>
                                            @request.AspNetUser1.Job.NameAR
                                        </td>

                                    }



                                }
                                else
                                {
                                    <td></td>
                                }

                                <td scope="col">

                                    @request.RequestDate.Value.ToShortDateString()

                                </td>





                            </tr>
                            }


                        </tbody>
                    </table>

