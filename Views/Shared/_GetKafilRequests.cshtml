                        <i class="far fa-file-certificate mr-1 ml-1"></i>

                    @Resource.Accredited     (@Model.WorkerRequests.Where(p => p.RequestStatus == clsEnum.WorkerRequestStatus.تم_الاعتماد.ToString()).Count())
                    </a>
                </li>

                <li class="nav-item">
