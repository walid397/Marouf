                }


                break;
            case "NotRegistered":
                dublicatedEmail.show();
                dublicatedEmail.css("color", "green");
                dublicatedEmail.html("");
                var sendbtn = document.getElementById('registerbtn');
                var checker = document.getElementById('acceptTerms');
                $('#SpanEmailValid').text("true");

                if (Formvalid() == true) {
