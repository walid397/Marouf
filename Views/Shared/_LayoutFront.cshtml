    <script type="text/javascript">
        $(document).ready(function () {
            $("body").tooltip({ selector: '[data-toggle=tooltip]' });


            //$(document).ready(function () {
            //    $('.js-multiple').select2();
            //});
        });
        $(document).ready(function () {
            $('span').on('click', function (e) {
                e.preventDefault();
                $(this).siblings('div.select').slideToggle();
                $(this).toggleClass('active');

            });



        });

        $(document).mouseup(function (e) {
            if ($("div.select").has(e.target).length === 0 && !$('div.select').has(e.target).length > 0) {
                $(' .select_wrap .select').css("display", "none");




            }
        });
        $('.imgcss ').click(function () {
            $('#uploadfile').click();
        });

        $('.uploaifncss ').click(function () {
            $('#uploadprofile').click();
        });


        $('#percent').on('change', function () {
            var val = parseInt($(this).val());
            var $circle = $('#svg #bar');

            if (isNaN(val)) {
                val = 100;
            }
            else {
                var r = $circle.attr('r');
                var c = Math.PI * (r * 2);

                if (val < 0) { val = 0; }
                if (val > 100) { val = 100; }

                var pct = ((100 - val) / 100) * c;

                $circle.css({ strokeDashoffset: pct });

                $('#cont').attr('data-pct', val);
            }
        });

        $(".dropdown dt a").on('click', function () {
            $(".dropdown dd ul").slideToggle('fast');
        });

        $(".dropdown dd ul li a").on('click', function () {
            $(".dropdown dd ul").hide();
        });

        function getSelectedValue(id) {
            return $("#" + id).find("dt a span.value").html();
        }

        $(document).bind('click', function (e) {
            var $clicked = $(e.target);
            if (!$clicked.parents().hasClass("dropdown")) $(".dropdown dd ul").hide();
        });

        $('.mutliSelect input[type="checkbox"]').on('click', function () {

            var title = $(this).closest('.mutliSelect').find('input[type="checkbox"]').val(),
                title = $(this).val() + ",";

            if ($(this).is(':checked')) {
                var html = '<span title="' + title + '">' + title + '</span>';
                $('.multiSel').append(html);
                $(".hida").hide();
            } else {
                $('span[title="' + title + '"]').remove();
                var ret = $(".hida");
                $('.dropdown dt a').append(ret);

            }
        });



        jQuery(function ($) {
            $('.select2-multiple').select2MultiCheckboxes({
                placeholder: "Choose multiple elements",
                width: "auto"
            })
            $('.select2-multiple2').select2MultiCheckboxes({
                templateSelection: function (selected, total) {
                    return "Selected " + selected.length + " of " + total;
                }
            })
            $('.select2-original').select2({
                placeholder: "Choose elements",
                width: "100%"
            })
        });

