@using Resources 

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div class="modal show fade" id="forgetModal" tabindex="-1" role="dialog" aria-labelledby="forgetModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header flex-column no-padding mb-2">
                <h5 class="modal-title mb-2 text-bold" id="forgetModalLabel">@Resource.ForgetPassword</h5>
                <p class="model-desc">@Resource.EnterYourEmailToRestoreYourPassword </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <div class="modal-body no-padding">
              
                    <div class="form-group">
                        <label for="resetEmail" class="mb-2 text-semibold">@Resource.Email </label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="@Resource.EnterYourEmail">
                    </div>
           
            </div>
            <div class="modal-footer justify-content-start no-padding mt-3">
                <button type="submit" class="btn" >
                     @Resource.Send
                </button>
            </div>
        </div>
    </div>
</div>
}