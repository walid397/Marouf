@model Marofh.FAQ

@{
    ViewBag.Title = "حذف سؤال ";
    ViewBag.Parent = "الاسئلة الشائعة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="delete-page">
    <h3>سوف يتم حذف احدى الاسئلة المتداولة  <span style="color:red;font-weight:bold;">"@Model.QuestionAR"</span> هل انت متأكد من ذلك؟</h3>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="تأكيد الحذف" class="btn btn-default" /> |
            @Html.ActionLink("العودة صفحة عرض الكل", "Index", new { @class = "btn btn-default" })
        </div>
    }
</div>
