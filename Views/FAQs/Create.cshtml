@model Marofh.FAQ


@{
    ViewBag.Title = "اضافة سؤال متداول جديد";
    ViewBag.Parent = "الاسئلة المتداولة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.LabelFor(model => model.QuestionAR, " السؤال باللغة العربية", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuestionAR, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.QuestionAR, "حقل اجبارى", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.QuestionEN, " السؤال باللغة الانجليزية", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.QuestionEN, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.QuestionEN, "حقل اجبارى", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.AnswerAR, " الاجابة باللغة العربية", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.AnswerAR, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.AnswerAR, "حقل اجبارى", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.AnswerEN, " الاجابة باللغة الانجليزية", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.AnswerEN, new { htmlAttributes = new { @class = "form-control", required = "required", @style = "height:200px;" } })
                @Html.ValidationMessageFor(model => model.AnswerEN, "حقل اجبارى", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ" class="btn btn-default" />
                @Html.ActionLink("عرض الكل", "Index", new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <style>
        textarea {
            font-family: inherit;
            width: 100%;
            height: 100px;
        }
    </style>
}

